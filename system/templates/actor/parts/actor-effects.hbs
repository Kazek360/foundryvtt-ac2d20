<ol class="items-list effects-list">
	{{#each effects as |section sid|}}
		<li class="items-header flexrow" data-effect-type="{{section.type}}">
			<h3 class="item-name effect-name flexrow">
				{{localize section.label}}
			</h3>
			<div class="effect-source">
				{{localize "AC2D20.TEMPLATES.Source"}}
			</div>
			<div class="effect-source">
				{{localize "AC2D20.TEMPLATES.Duration"}}
			</div>
			<div class="item-controls effect-controls flexrow">
				<a
					class="effect-control"
					data-action="create"
					title="{{localize 'AC2D20.EffectCreate'}}"
				>
					<i class="fas fa-plus"></i>
					{{localize "AC2D20.UI.Add"}}
				</a>
			</div>
		</li>

		<ol class="item-list">
			{{#each section.effects as |effect|}}
				<li class="item effect flexrow" data-effect-id="{{effect.id}}">
					<div class="item-name effect-name flexrow">
						<img class="item-image" src="{{activeEffectIcon effect}}"/>
						&nbsp;
						<h4>{{effect.name}}</h4>
					</div>
					<div class="effect-source">
						{{effect.sourceName}}
					</div>
					<div class="effect-duration">
						{{effect.duration.label}}
					</div>
					<div class="item-controls effect-controls flexrow">
						<a
							class="effect-control"
							data-action="toggle"
							title="{{localize 'AC2D20.EffectToggle'}}"
						>
							{{#if effect.disabled}}
								<i class="fas fa-check"></i>
							{{else}}
								<i class="fas fa-times"></i>
							{{/if}}
						</a>
						<a
							class="effect-control"
							data-action="edit"
							title="{{localize 'AC2D20.EffectEdit'}}"
						>
							<i class="fas fa-edit"></i>
						</a>
						<a
							class="effect-control"
							data-action="delete"
							title="{{localize 'AC2D20.EffectDelete'}}"
						>
							<i class="fas fa-trash"></i>
						</a>
					</div>
				</li>
			{{/each}}
		</ol>
	{{/each}}
</ol>
