<form class="{{cssClass}} item-sheet flexcol" autocomplete="off">
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs" data-group="primary">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <img src="systems/ac2d20/assets/main-menu-slope.webp">
        <div class="buttons">
            <a class="item" data-tab="attributes">{{localize "AC2D20.TEMPLATES.Attributes"}}</a>
        </div>
    </nav>

    {{> "systems/ac2d20/templates/item/parts/item-header.hbs"}}

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Attributes Tab --}}
        <div class="tab flex-tab attributes" data-group="primary" data-tab="attributes">
            {{!-- As you add new fields, add them in here! --}}
            <div class="resource green-field" style="display: flex;">
                <label style="margin-right: 5px;">{{localize "AC2D20.TEMPLATES.Keywords"}}</label>
                <input type="text" name="system.keywords" value="{{system.keywords}}">
            </div>
            <div class="section-title">
                <h3>{{localize "AC2D20.TEMPLATES.Description"}}</h3>
                <span class="right-slope olive"></span>
            </div>

            {{editor descriptionHTML target="system.description" rollData=rollData button=true owner=owner editable=editable engine="prosemirror"}}

        </div>
    </section>

</form>
